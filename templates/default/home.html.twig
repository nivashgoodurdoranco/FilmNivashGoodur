{% extends 'base.html.twig' %}

{% block title %}Filmothèque{% endblock %}

{% block body %}
    <h1 class="text-center my-4 text-primary">Filmothèque</h1>

    <table class="table table-dark table-striped">
        <thead>
          <tr>
            <th scope="col">id</th>
            <th scope="col">Titre</th>
            <th scope="col">Réalisateur</th>
            <th scope="col">Résumé</th>
            <th scope="col">Durée</th>
            <th scope="col">Année de Sortie</th>
          </tr>
        </thead>
        <tbody>
          {% for film in films %}
          <tr>
            <th scope="row">{{ film.id }}</th>
            <td>{{ film.titre }}</td>
            <td>{{ film.realisateur }}</td>
            <td>{{ film.resume }}</td>
            <td>{{ film.duree }}</td>
            <td>{{ film.anneeSortie|date("Y") }}</td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
{% endblock %}
